# List files/directories which are modified today
alias ld="ls -al --time-style=+%D | grep `date +%D`"

alias fhere="find . -name "

alias free="free -mt"

alias ps="ps -auxf"
alias mkdir="mkdir -p"

alias df="df -Tha --total"
alias du="du -ach | sort -h"

alias l="ls -CF --group-directories-first --color"
alias ll="ls -lrthF --group-directories-first --color"
alias ls="ls -CF --group-directories-first --color"
alias lsl="ls -lhFA --group-directories-first"

alias c='clear;ls'
alias cls='clear;ls'

alias serve="python -m SimpleHTTPServer"

alias vi="vim -p"
alias vim="vim -p"

alias cp="cp -iv"     # interactive, verbose
